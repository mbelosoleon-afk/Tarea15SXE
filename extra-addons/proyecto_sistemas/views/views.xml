<odoo>
  <data>
    <!--- explicit list view definition -->

    <record model="ir.ui.view" id="proyecto_sistemas.list">
      <field name="name">proyectoSistemas list</field>
      <field name="model">proyecto_sistemas.proyecto_sistemas</field>
      <field name="arch" type="xml">
        <list>
          <field name="alumno"/>
          <field name="nivel_sueno"/>
          <field name="bebida_recomendada"/>
        </list>
      </field>
    </record>


     <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="proyecto_sistemas.action_window">
      <field name="name">proyectoSistemas window</field>
      <field name="res_model">proyecto_sistemas.proyecto_sistemas</field>
      <field name="view_mode">list,form</field>
    </record>


     <!-- server action to the one above -->

    <record model="ir.actions.server" id="proyecto_sistemas.action_server">
      <field name="name">proyectoSistemas server</field>
      <field name="model_id" ref="model_proyecto_sistemas_proyecto_sistemas"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "list,form",
          "res_model": model._name,
        }
      </field>
    </record>

     <!-- Top menu item -->

    <menuitem name="proyectoSistemas" id="proyecto_sistemas.menu_root"/>

     <!-- menu categories -->

    <menuitem name="Menu 1" id="proyecto_sistemas.menu_1" parent="proyecto_sistemas.menu_root"/>
    <menuitem name="Menu 2" id="proyecto_sistemas.menu_2" parent="proyecto_sistemas.menu_root"/>

     <!-- actions -->

    <menuitem name="List" id="proyecto_sistemas.menu_1_list" parent="proyecto_sistemas.menu_1"
              action="proyecto_sistemas.action_window"/>
    <menuitem name="Server to list" id="proyecto_sistemas" parent="proyecto_sistemas.menu_2"
              action="proyecto_sistemas.action_server"/>

  </data>
</odoo>
